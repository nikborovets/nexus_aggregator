{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:nonOfficeHours"
  ],
  "timezone": "Europe/Moscow",
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },
  "packageRules": [
    {
      "description": "Group Python dependencies",
      "matchCategories": ["python"],
      "groupName": "Python dependencies",
      "addLabels": ["dependencies", "python"]
    },
    {
      "description": "Group Docker dependencies",
      "matchDatasources": ["docker"],
      "groupName": "Docker dependencies",
      "addLabels": ["dependencies", "docker"]
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "addLabels": ["dependencies", "ci"]
    },
    {
      "description": "Group production dependencies",
      "matchDepTypes": ["project.dependencies"],
      "groupName": "Production dependencies",
      "addLabels": ["dependencies", "production"]
    },
    {
      "description": "Group optional dependencies",
      "matchDepTypes": ["project.optional-dependencies"],
      "groupName": "Optional dependencies",
      "addLabels": ["dependencies", "optional"]
    },
    {
      "description": "Group build dependencies",
      "matchDepTypes": ["build-system.requires"],
      "groupName": "Build dependencies",
      "addLabels": ["dependencies", "build"]
    },
    {
      "description": "Group dependency groups",
      "matchDepTypes": ["dependency-groups"],
      "groupName": "Dev dependencies",
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "addLabels": ["dependencies", "dev"]
    },
    {
      "description": "Auto-merge dev dependencies",
      "matchDepTypes": ["tool.uv.dev-dependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "groupName": "Dev dependencies",
      "addLabels": ["dependencies", "dev"]
    },
    {
      "description": "Update ranges for >= dependencies",
      "matchManagers": ["pep621"],
      "rangeStrategy": "bump"
    },
    {
      "description": "Conservative Python dependency updates",
      "matchManagers": ["pep621"],
      "matchDepTypes": ["project.dependencies"],
      "respectLatest": true,
      "stabilityDays": 3,
      "prCreation": "immediate"
    }
  ],
  "prConcurrentLimit": 3,
  "branchConcurrentLimit": 5,
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prTitle": "⬆️ Update {{depName}} to {{newVersion}}",
  "labels": ["dependencies"]
}
